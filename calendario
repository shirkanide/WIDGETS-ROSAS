  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}
.month {
  text-align: center;
  font-size: 20px;
  font-weight: 600;
  color: #b76e79;
  margin-bottom: 10px;
  text-transform: capitalize;
}
