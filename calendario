<body>
<div class="calendar">
  <div class="month" id="month"></div>
  <div class="weekdays">
    <div>L</div><div>M</div><div>X</div><div>J</div><div>V</div><div>S</div><div>D</div>
  </div>
  <div class="days" id="days"></div>
</div>
<script>
const today = new Date();
const monthNames = [
  "enero","febrero","marzo","abril","mayo","junio",
  "julio","agosto","septiembre","octubre","noviembre","diciembre"
];
document.getElementById("month").innerText =
  monthNames[today.getMonth()] + " " + today.getFullYear();
const daysContainer = document.getElementById("days");
const firstDay = new Date(today.getFullYear(), today.getMonth(), 1).getDay();
const lastDate = new Date(today.getFullYear(), today.getMonth() + 1, 0).getDate();
const start = (firstDay === 0) ? 6 : firstDay - 1;
for (let i = 0; i < start; i++) { daysContainer.innerHTML += "<div></div>"; }
for (let d = 1; d <= lastDate; d++) {
  if (d === today.getDate()) { daysContainer.innerHTML += `<div class="today">${d}</div>`; }
  else { daysContainer.innerHTML += `<div>${d}</div>`; }
}
</script>
</body>
